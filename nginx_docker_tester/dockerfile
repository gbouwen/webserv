# OS
From ubuntu:latest

# update packages
RUN apt-get update && apt-get upgrade -y

# install Nginx
RUN apt-get install -y nginx openssl

# install PhP
RUN		apt-get -y install php7.3 php-mysql php-fpm php-cli php-mbstring

# copy nginx config file to the right place
COPY srcs/test_nginx.conf /etc/nginx/sites-available/localhost
RUN mkdir /tmp/downloads
COPY srcs/index.html /tmp/downloads
RUN mkdir /tmp/downloads/test
COPY srcs/test_index.html /tmp/downloads/test/index.html

# symlin this to sites-enabled to enable it
RUN ln -s /etc/nginx/sites-available/localhost /etc/nginx/sites-enabled

# define the port number the container should expose
EXPOSE 80

# run the command
CMD service nginx start && bash
